
html(lang="en")
  head
    title Hipcharts
    meta(charset="utf-8")
    meta(name="apple-mobile-web-app-capable",content="yes")
    meta(name="viewport",content="width=device-width, initial-scale=1.0, maximum-scale=1.0,user-scalable=no")
    link(rel="stylesheet",href="/css/font-awesome.min.css")
    link(rel="stylesheet",href="/css/styles.css")
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    script(src="/js/frontend.js")
  body

    .wrapper
      h2.title
        a(href="/user") jaseflow
        |  favourite 
        strong Oxymoron
        |  tracks
      .list(id="list")
        .list__content
          .widget(id="player")
            .widget__body
              .widget__cover(style="background-image: url(http://cdn.hiphopdx.com/images/schoolboy-q-oxymoron-deluxecover.jpg)")
              .widget__content
                .product
                  .product__thumb(style="background-image: url(http://cdn.hiphopdx.com/images/schoolboy-q-oxymoron-deluxecover.jpg)")
                  .product__content
                    .product__subtitle Schoolboy Q
                    .product__title Break The Bank
                  .product__action
                    i.fa.fa-shopping-cart.product__cart
                    | Buy
            .widget__footer
              .scrubber
                .scrubber__bar
                  .scrubber__control
        .list__items
          .item(data-ext="--first")
            .item__count 1
            //- .item__thumb(style="background-image: url(http://www.theawl.com/wp-content/uploads/2011/10/stankonia.jpg)")
